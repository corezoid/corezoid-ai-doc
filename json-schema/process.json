{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Process Schema",
  "description": "Schema for processes in Corezoid",
  "type": "object",
  "required": [
    "obj_type",
    "obj_id",
    "title",
    "status",
    "params",
    "ref_mask",
    "conv_type",
    "scheme"
  ],
  "properties": {
    "obj_type": {
      "type": "integer",
      "enum": [
        1
      ],
      "description": "Object type: 1 - Process"
    },
    "obj_id": {
      "type": ["integer","null"],
      "description": "Unique process ID"
    },
    "parent_id": {
      "type":  ["integer","null"],
      "description": "ID of the parent folder, it is optional"
    },
    "title": {
      "type": "string",
      "description": "Process title"
    },
    "description": {
      "type": "string",
      "description": "Process description"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive"
      ],
      "description": "Process status"
    },
    "params": {
      "type": "array",
      "description": "Process parameters",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Parameter name"
          },
          "type": {
            "type": "string",
            "enum": [
              "string",
              "number",
              "boolean",
              "object",
              "array"
            ],
            "description": "Parameter data type"
          },
          "flags": {
            "type": "array",
            "description": "Parameter flags",
            "items": {
              "type": "string",
              "enum": [
                "auto-clear",
                "required",
                "input",
                "output"
              ]
            }
          }
        }
      }
    },
    "ref_mask": {
      "type": "boolean",
      "description": "Whether to use reference mask"
    },
    "conv_type": {
      "type": "string",
      "enum": [
        "process"
      ],
      "description": "Conveyor type"
    },
    "scheme": {
      "type": "object",
      "required": [
        "nodes",
        "web_settings"
      ],
      "properties": {
        "nodes": {
          "type": "array",
          "description": "Process nodes",
          "items": {
            "$ref": "#/definitions/node"
          }
        },
        "web_settings": {
          "type": "array",
          "description": "Web settings"
        }
      }
    }
  },
  "examples": [
    {
      "obj_type": 1,
      "obj_id": 1652996,
      "title": "AllNodes_FirstPart",
      "description": "",
      "status": "active",
      "params": [],
      "ref_mask": true,
      "conv_type": "process",
      "scheme": {
        "nodes": [
          {
            "id": "680a3bc3513aa065de6bf62e",
            "obj_type": 1,
            "condition": {
              "logics": [
                {
                  "type": "go",
                  "to_node_id": "680a3bcd82ba963ebb6afd05"
                }
              ],
              "semaphors": []
            },
            "title": "Start",
            "description": "",
            "x": 816,
            "y": -492,
            "extra": "{\"modeForm\":\"collapse\",\"icon\":\"\"}",
            "options": null
          }
        ],
        "web_settings": [
          [],
          []
        ]
      }
    }
  ]
}
